<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp"
    tools:context=".presentation.view.team.TeamMatchesFragment">

    <ProgressBar
        android:id="@+id/pb_team_matches"
        style="@style/DotaMetricsProgressBar"
        app:layout_constraintBottom_toBottomOf="@id/rc_team_matches"
        app:layout_constraintEnd_toEndOf="@id/rc_team_matches"
        app:layout_constraintStart_toStartOf="@id/rc_team_matches"
        app:layout_constraintTop_toTopOf="@id/rc_team_matches" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_team_matches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/team_match_item" />

</androidx.constraintlayout.widget.ConstraintLayout>